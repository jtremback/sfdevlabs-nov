html
  height 100%

body
  height 100%

section
  padding 50px 0

.navbar-elegant
  left 0
  right 0
  background white
  text-align center
  height $navbar-height
  .navbar-nav
    font-size 20px
    display inline-block
    float none
    a
      box-sizing border-box
    .active > a
      background-color white !important
      border-bottom 1px solid black

  &.affix-top
    top 50px
    position absolute

  &.affix
    top 0
    position fixed

.bg-image
  position relative
  background-position center center
  background-size cover

.bg-image-one
  height 80%
  background-image url("../images/blue_skyline_low.jpg")

.bg-image-two
  height 500px
  background-image url("../images/coffee-table.jpg")

.bg-image-three
  height 500px
  background-image url("../images/code.jpg")

.crossed-seperator
  height 100px
  margin 0
  padding 0
  path.one
    fill #eee
  path.two
    fill #fff

.crossed-seperator-bottom
  position absolute
  left 0
  right 0
  bottom -10px

.crossed-seperator-top
  position absolute
  left 0
  right 0
  top -10px

.sectitle
  text-align center
  margin-bottom 40px

.main-logo
  display inline-block
  float none
  margin-top 150px
  max-width 300px

.lead
  color $gray-light

li 
  margin-bottom ($line-height-computed / 2)

.footer
  height 100%
  padding-top 0
  color white
  background $gray
  text-align center

.biz-card
  color $text-color
  text-align left
  clearfix()
  background $body-bg
  padding $grid-gutter-width $grid-gutter-width
  display inline-block
  .card-logo
    margin-right ($grid-gutter-width / 2)
    width 100px
    float left
  address
    float left
    margin-bottom 0

.bullet-block
  text-align center
  img 
    display inline-block
    width 60%
  @media $media-max-tablet
    clearfix()
    text-align left
    clear both
    padding-bottom $grid-gutter-width
    img
      float left
      width 30%
      margin-right $grid-gutter-width

